    <!-- Description -->
    <Label layoutX="50.0" layoutY="233.0" text="Description:" />
    <TextField fx:id="descField" layoutX="150.0" layoutY="228.0" prefWidth="300.0" promptText="Enter description" />

    <!-- Due Date -->
    <Label layoutX="49.0" layoutY="297.0" text="Due Date:" />
