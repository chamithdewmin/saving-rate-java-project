<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@../CSS/Read.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.savingRate.SavingRate.Controller.ReadDataController">

    <!-- Income Table -->
    <TableView fx:id="incomeTable" layoutX="39.0" layoutY="125.0" prefHeight="616.0" prefWidth="538.0">
        <columns>
            <TableColumn fx:id="incomeDateCol" prefWidth="157.0" styleClass="inDate" text="Date" />
            <TableColumn fx:id="incomeDescCol" prefWidth="231.0" text="Description" />
            <TableColumn fx:id="incomeValueCol" prefWidth="149.0" text="Value (RS)" />
        </columns>
    </TableView>

    <!-- Expense Table -->
    <TableView fx:id="expenseTable" layoutX="612.0" layoutY="125.0" prefHeight="616.0" prefWidth="538.0">
        <columns>
            <TableColumn fx:id="expenseDateCol" prefWidth="130.0" text="Date" />
            <TableColumn fx:id="expenseDescCol" prefWidth="185.0" text="Description" />
            <TableColumn fx:id="expenseCategoryCol" prefWidth="86.0" text="Category" />
            <TableColumn fx:id="expenseValueCol" prefWidth="136.0" text="Value (RS)" />
        </columns>
    </TableView>

    <!-- Section Labels -->
    <Label layoutX="191.0" layoutY="30.0" prefHeight="73.0" prefWidth="235.0" styleClass="incomeLable" text="Income Table" />

    <!-- Refresh Button -->
    <Button fx:id="refreshButton" layoutX="540.0" layoutY="47.0" onAction="#handleRefresh" prefHeight="40" prefWidth="120" styleClass="refreshButton" text="Refresh" />
   <Label layoutX="748.0" layoutY="30.0" prefHeight="73.0" prefWidth="267.0" styleClass="ExpenceLable" stylesheets="@../CSS/Read.css" text="Expenses Table" />
</AnchorPane>
