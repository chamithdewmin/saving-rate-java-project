<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="850.0" prefWidth="1500.0" stylesheets="@../CSS/invoice.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.savingRate.SavingRate.Controller.InvoiceController">

    <!-- Invoice Table -->
    <TableView fx:id="invoiceTable" layoutX="53.0" layoutY="98.0" prefHeight="694.0" prefWidth="661.0">
        <columns>
            <TableColumn fx:id="dateColum" prefWidth="169.0" text="Date" />
            <TableColumn fx:id="desColum" prefWidth="339.0" text="Description" />
            <TableColumn fx:id="costColum" prefWidth="152.0" text="Cost" />
        </columns>
    </TableView>

    <!-- Add Button -->
    <Button fx:id="addBtn" layoutX="759.0" layoutY="377.0" mnemonicParsing="false" onAction="#handleAdd" prefHeight="48.0" prefWidth="105.0" text="Add" />

    <!-- Invoice List View -->
    <ListView fx:id="listView" layoutX="903.0" layoutY="98.0" prefHeight="694.0" prefWidth="552.0" />

    <!-- Export PDF Button -->
    <Button fx:id="exportBtn" layoutX="1317.0" layoutY="29.0" mnemonicParsing="false" onAction="#handleExport" prefHeight="48.0" prefWidth="138.0" text="Export PDF" />

    <!-- Header Label -->
    <Label layoutX="222.0" layoutY="38.0" styleClass="ExpaensLabelTopic" text="Add your Invoice data in this table" />

    <!-- Remove Button -->
    <Button fx:id="removeBtn" layoutX="759.0" layoutY="445.0" mnemonicParsing="false" onAction="#handleRemove" prefHeight="48.0" prefWidth="105.0" text="Remove" />

    <!-- âœ… Corrected Refresh Button to call handleRefresh -->
    <Button fx:id="RefreshBtn" layoutX="609.0" layoutY="29.0" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="48.0" prefWidth="105.0" text="Refresh" />
   <TextField fx:id="nameTxt" layoutX="903.0" layoutY="29.0" prefHeight="48.0" prefWidth="293.0" promptText="Cleinet name" />
</AnchorPane>
